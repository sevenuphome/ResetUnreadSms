<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1.0" />
	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/no_unreadsms" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/reset_button" android:text="@string/reset_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text="@string/donate" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/donate_link" />
	</LinearLayout>
</LinearLayout>

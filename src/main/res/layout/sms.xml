<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_address"
            android:id="@+id/sms_address_label"
            android:layout_alignParentLeft="true"
            android:paddingRight="8dp"/>

    <TextView
            android:id="@+id/sms_address"
            android:layout_alignBaseline="@id/sms_address_label"
            android:layout_toRightOf="@id/sms_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sms_address_label"
            android:id="@+id/sms_content_label"
            android:text="@string/sms_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="8dp"/>

    <TextView
            android:id="@+id/sms_content"
            android:layout_alignBaseline="@id/sms_content_label"
            android:layout_toRightOf="@id/sms_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="marquee"/>

</RelativeLayout>